<!DOCTYPE html>
<html>
<head>
  <title>TwitterTalentSouth</title>
  <!-- Bootstrap links: -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- update to stylesheet_link_tag -->
  <link href="http://fonts.googleapis.com/css?family=Alice|Playfair+Display:900" rel="stylesheet" type="text/css" />

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><%= image_tag "logo_woof.png", width: "120px" %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to root_path do %>
                <span class="fa fa-comment"></span> Feed
               <% end %></li>
          <li><%= link_to user_profile_path(user_id: current_user.id) do %>
                <span class="fa fa-paw"></span> My Woofs
               <% end %>
          </li>
          <li><%= link_to tweets_path do %>
              <span class="fa fa-comments-o"></span> All Woofs
              <% end %>
          </li>
          <!--<li><%#= link_to "Edit My Profile", edit_user_registration_path %></li>-->

        <%# else %>
          <!--<li><%#= link_to "Sign in", new_user_session_path %></li>-->
           
        <% end %>
      </ul>
       <% if user_signed_in? %>
        <div class="navbar-right">
            <span class="navbar-text">You are logged in as <strong><%= current_user.username %></strong> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %></span>
          </div>
        <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">

  <% if notice != nil && user_signed_in? %>
  <p class="alert alert-success" role="alert"><%= notice %></p>
  <% end %>

 <!-- Logged in view -->
  <% if user_signed_in? %>
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">      
            <div class="media">
              <a class="media crop-image" href="#">
                <%= image_tag current_user.avatar.url(:medium) %><br/>
              </a>
              <div class="media-body">
                 <hr/>
                <h3 class="media-heading"><%= current_user.username %></h3>
                <p><%= current_user.name %> from <%= current_user.location %></p>
                <blockquote><%= current_user.bio %></blockquote>
                <div class="counts">
                  <label>Following:</label> 
                  <%= link_to root_path do %>
                     <span class="badge"> <%= current_user.following.count %></span>
                  <% end %> 
                  <label>Followers:</label>
                    <span class="badge"><%= current_user.tweets.count %></span>
                  <br/>
                  <label>Woofs:</label>
                  <%= link_to user_profile_path(user_id: current_user.id) do %>
                    <span class="badge"> <%= current_user.tweets.count %></span>
                  <% end %> 
                </div>
                  <hr/>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-lg btn-primary" %>             
              </div>
            </div>
          </div> 
        </div> 
      </div>
    <div class="col-md-7">
      <%= yield %>
    </div>
    <div class="col-md-2">
      <%#= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>

      <!--<h3><i class="fa fa-paw"></i> Follow Us!</h3>-->
      <% @users.each do |user| %>
        <% if user.id != current_user.id && current_user.following.include?(user.id) == false %>
          <%= image_tag user.avatar.url(:thumb) %>
          <p><%= link_to user.username, user_profile_path(user_id: user.id) %></p> 
          <hr/>
        <% end %>
      <% end %>
      </div>
    </div> <!-- end row -->
    <% else %>
    <!-- Not logged in: SHOW LOGIN FIELDS -->
      <div class="col-md-3 col-md-offset-2">
          <% flash.each do |name, msg| %> 
            <div class="alert alert-danger alert-dismissible">
              <%= content_tag :div, msg, id: "flash_#{name}" %>
            </div>
          <% end %>
        <%= yield %>
      </div>
      <div class="col-md-3">
      <%= image_tag "dog_keyboard.png", width: "480px" %>
     </div>
   </div> <!-- end row -->
  <% end %>


</body>
</html>
